# Application environment variables example file
# Copy this file to .env and modify as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_AUTH_SERVICE_URL=http://localhost:3000/auth

# Database Configuration
VITE_DATABASE_TYPE=supabase
VITE_SUPABASE_URL=https://your-supabase-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_SCHEMA=public

# Alternative Database (SQLite)
# VITE_DATABASE_TYPE=sqlite
# VITE_SQLITE_PATH=:memory:

# Feature Flags
VITE_ENABLE_AUTH=true
VITE_ENABLE_NOTIFICATIONS=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_BETA_FEATURES=false

# Application Settings
VITE_APP_NAME=My Application
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_THEME=dark
VITE_DEFAULT_PAGE_SIZE=10

# Timeouts
VITE_API_TIMEOUT=30000
VITE_SESSION_TIMEOUT=3600000
VITE_TOKEN_REFRESH_INTERVAL=300000

# Logging
VITE_LOG_LEVEL=info
VITE_LOG_API_ERRORS=true
VITE_LOG_CONSOLE_OUTPUT=true
VITE_LOG_REMOTE=false
VITE_LOG_REMOTE_URL=

# Security
VITE_CSRF_ENABLED=true
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_REQUIRES_LOWERCASE=true
VITE_PASSWORD_REQUIRES_UPPERCASE=true
VITE_PASSWORD_REQUIRES_NUMBERS=true
VITE_PASSWORD_REQUIRES_SYMBOLS=true

# Services
VITE_ENABLE_EXTERNAL_SERVICES=false
VITE_STRIPE_PUBLIC_KEY=

# Third-party integrations
VITE_GOOGLE_ANALYTICS_ID=